<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Dialog弹窗测试Demo："
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <LinearLayout
            android:id="@+id/activity_alert_pop_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/alert_pop_type1"
                style="@style/button_style_white_bg"
                android:text="Type1:仅有标题，无内容，两个按钮" />

            <Button
                android:id="@+id/alert_pop_type2"
                style="@style/button_style_white_bg"
                android:text="Type2:仅有标题，无内容，一个取消按钮" />

            <Button
                android:id="@+id/alert_pop_type3"
                style="@style/button_style_white_bg"
                android:text="Type3:仅有标题（标题前有进度条），无内容，一个取消按钮" />

            <Button
                android:id="@+id/alert_pop_type4"
                style="@style/button_style_white_bg"
                android:text="Type4:仅有标题，无内容，一个确定按钮" />

            <Button
                android:id="@+id/alert_pop_type101"
                style="@style/button_style_white_bg"
                android:text="Type101:有标题，有文本内容，一个确定按钮" />

            <Button
                android:id="@+id/alert_pop_type102"
                style="@style/button_style_white_bg"
                android:text="Type102:有标题，有自定义布局内容，一个确定按钮" />

            <Button
                android:id="@+id/alert_pop_type103"
                style="@style/button_style_white_bg"
                android:text="Type103:有标题，有文本内容，两个按钮" />

            <Button
                android:id="@+id/alert_pop_type104"
                style="@style/button_style_white_bg"
                android:text="Type104:有标题，有自定义布局内容，两个按钮" />

            <Button
                android:id="@+id/alert_pop_type105"
                style="@style/button_style_white_bg"
                android:text="Type105:有标题，有自定义布局内容，一个取消按钮" />

            <Button
                android:id="@+id/alert_pop_type106"
                style="@style/button_style_white_bg"
                android:text="Type106:有标题，有文本内容，一个确定按钮" />

            <Button
                android:id="@+id/alert_pop_type201"
                style="@style/button_style_white_bg"
                android:text="Type201:有标题，标题有背景，有文本内容，两个按钮" />

            <Button
                android:id="@+id/alert_pop_type202"
                style="@style/button_style_white_bg"
                android:text="Type202:有标题，标题有背景，有自定义布局内容，两个按钮" />

            <Button
                android:id="@+id/alert_pop_type203"
                style="@style/button_style_white_bg"
                android:text="Type203:有标题，标题有背景，有自定义布局内容，一个确定按钮" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="WindowManager弹窗测试Demo："
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/alert_window_pop_type1"
                style="@style/button_style_white_bg"
                android:text="WindowType1:有标题，标题有背景，有文本内容，两个按钮" />

            <Button
                android:id="@+id/alert_window_pop_type2"
                style="@style/button_style_white_bg"
                android:text="WindowType2:有标题，标题有背景，有自定义布局内容，两个按钮" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
